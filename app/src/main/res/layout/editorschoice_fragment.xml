<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/editorsChoiceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            android:text="@string/editors_choice_apps"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/editorsChoice1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/editors_choice1"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/editorsChoice2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/editors_choice2"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/editorsChoice3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/editors_choice3"
            android:contentDescription="@string/todo" />

        <ImageView
            android:id="@+id/editorsChoice4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/editors_choice4"
            android:contentDescription="@string/todo" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <ProgressBar
        android:id="@+id/editorsChoiceProgress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginTop="250dp"
        android:layout_gravity="center" />

</LinearLayout>