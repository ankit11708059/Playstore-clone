<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_height="wrap_content">

    <ImageView
        style="@style/CardView.Light"
        android:id="@+id/thumbnail"
        android:background="@drawable/curved_corner"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerInside"
        android:contentDescription="@string/todo" />
    <TextView
        android:textColor="@color/black"
        android:padding="14dp"
        android:layout_toEndOf="@+id/thumbnail"
        android:layout_marginTop="6dp"
        android:id="@+id/poster_title"
        android:textStyle="bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2">
    </TextView>
    <TextView
        android:textColor="@color/black"
        android:textSize="12sp"
        android:id="@+id/app_list_size"
        android:padding="2dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:layout_toEndOf="@id/thumbnail"
        android:layout_below="@id/poster_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>
    <TextView
        android:textColor="@color/black"
        android:textSize="12sp"
        android:id="@+id/score_editor"
        android:padding="2dp"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:gravity="center"
        android:layout_toEndOf="@id/thumbnail"
        android:layout_below="@id/app_list_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableEndCompat="@drawable/ic_baseline_star_rate_24">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summary"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_below="@id/thumbnail"
        android:padding="14dp"/>
    <Button
        android:id="@+id/moreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/summary"
        android:background="@drawable/curved_corner_button"
        android:text="@string/more_info"
        android:textAllCaps="false"
        android:textColor="@color/green"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>